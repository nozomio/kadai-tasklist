<%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
<%= link_to 'ログインページへ', login_path, class: 'btn btn-lg btn-primary' %>
<%= link_to 'ログアウト', logout_path, method: :delete, class: 'btn btn-lg btn-primary' %>

<h1>タスク一覧</h1>

<% if logged_in? %>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> &gt;<%= task.status %></li>
  <% end %>
</ul>
<% else %>
<p>ログアウトしているので見られません。</p>
<% end %>

<%= link_to '新規タスクの投稿', new_task_path %>
